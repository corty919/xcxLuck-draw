}

.turntable_con .item{
	display: flex;
	flex-direction: column;
	font-size: 0;
	margin: auto;
	position: absolute;
	z-index: 10;
	top: 42rpx;
	left: 0;
	right: 0;
	text-align: center;
	transform-origin: center 296rpx;
	width: 150rpx;
}

.turntable_con .item:nth-child(1){
	transform: rotate(-2deg);
}

.turntable_con .item:nth-child(2){
	transform: rotate(43deg);
}

.turntable_con .item:nth-child(3){
	transform: rotate(89deg);
}

.turntable_con .item:nth-child(4){
	transform: rotate(134deg);
}

.turntable_con .item:nth-child(5){
	transform: rotate(179deg);
}

.turntable_con .item:nth-child(6){
	transform: rotate(224deg);
}

.turntable_con .item:nth-child(7){
	transform: rotate(269deg);
}

.turntable_con .item:nth-child(8){
	transform: rotate(313deg);
}

.turntable_con .item image{
	margin: 0 auto 10rpx auto;
	width: 100rpx;
	height: 100rpx;
}

.turntable_con .item text{
	color: #ADADAD;
	font-size: 28rpx;
	line-height: 40rpx;
}

.turntable_box .go{
	margin: auto;
	position: absolute;
	z-index: 10;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	transform: translateY(-24rpx);
	width: 242rpx;
}
